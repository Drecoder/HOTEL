{
  "compilerOptions": {
    "module": "Commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "paths": {
    "@db/*": ["src/db/*"],
    "@room/*": ["src/room/*"]
    
  },
  "ts-node": {
    "transpileOnly": true,
    "ignore": ["node_modules"],
    "files": true
  }
}
